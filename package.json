{
  "name": "uy-kape",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --max-warnings 5",
    "preview": "vite preview",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ci": "vitest run --config=tests/config/vitest.config.ci.ts --coverage --reporter=verbose --reporter=junit --outputFile=tests/outputs/test-results.xml",
    "test:ci-no-coverage": "vitest run --config=tests/config/vitest.config.ci.ts --reporter=verbose --reporter=junit --outputFile=tests/outputs/test-results.xml",
    "test:memory": "vitest run --config=tests/config/vitest.config.ci.ts --reporter=verbose --logHeapUsage",
    "test:local-db": "cross-env VITE_TEST_USE_LOCAL_DB=true VITE_TEST_USE_MOCKS=false vitest run",
    "test:local-db:watch": "cross-env VITE_TEST_USE_LOCAL_DB=true VITE_TEST_USE_MOCKS=false vitest",
    "test:local-db:coverage": "cross-env VITE_TEST_USE_LOCAL_DB=true VITE_TEST_USE_MOCKS=false vitest run --coverage",
    "test:mocks": "cross-env VITE_TEST_USE_MOCKS=true VITE_TEST_USE_LOCAL_DB=false vitest run",
    "test:mocks:watch": "cross-env VITE_TEST_USE_MOCKS=true VITE_TEST_USE_LOCAL_DB=false vitest",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "db:setup": "supabase start && supabase db reset",
    "db:test": "pwsh -ExecutionPolicy Bypass -File ./scripts/test-local-db.ps1 test",
    "db:status": "pwsh -ExecutionPolicy Bypass -File ./scripts/test-local-db.ps1 status",
    "ping-database": "node scripts/ping-database.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.541.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "supabase": "^2.54.11",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.2.2",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  }
}
